@page
@model IsaacOkomanyi_ProfilePage.Views.Home.UserProfileModel
<!-- UserProfile.cshtml -->

@{
    ViewData["Title"] = "User Profile";
}

<h1>User Profile</h1>

<!-- Profile Photo Section -->
<div>
    <img src="user-photo.jpg" alt="User Photo">
    <button onclick="openFileUpload()">Change/Upload Photo</button>
    <button onclick="removePhoto()">Remove Photo</button>
    <input type="file" id="fileInput" style="display: none;">
</div>

<!-- Name Section -->
<div>
    <label for="userName">Name:</label>
    <input type="text" id="userName" value="User Name">
</div>

<!-- Email Section -->
<div>
    <label for="userEmail">Email:</label>
    <input type="email" id="userEmail" value="user@example.com">
    <a href="/ChangeEmail">Change Email</a>
</div>

<!-- Password Section -->
<div>
    <a href="/ChangePassword">Change Password</a>
</div>

<!-- Delete Account Section -->
<div>
    <button onclick="deleteAccount()">Delete Account</button>
</div>

<script>
    function openFileUpload() {
        document.getElementById("fileInput").click();
    }

    function removePhoto() {
